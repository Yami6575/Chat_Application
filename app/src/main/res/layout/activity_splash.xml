        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.669" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_25sdp"
